{
    "$schema": "https://openclaw.ai/schema/config.json",
    "gateway": {
        "port": 18789,
        "auth": {
            "token": "${OPENCLAW_GATEWAY_TOKEN}",
            "allowInsecureAuth": false
        },
        "reload": {
            "mode": "hybrid"
        }
    },
    "hooks": {
        "internal": {
            "enabled": true,
            "entries": {}
        }
    },
    "agents": {
        "defaults": {
            "model": "claude-sonnet-4-20250514",
            "workspace": "~/.openclaw-original/workspace"
        }
    },
    "channels": {
        "whatsapp": {
            "dmPolicy": "pairing",
            "selfChatMode": false,
            "groupPolicy": "allowlist"
        },
        "telegram": {
            "dmPolicy": "pairing"
        }
    },
    "security": {
        "strictMode": true
    }
}